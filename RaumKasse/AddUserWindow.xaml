<Window x:Class="RaumKasse.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddUserWindow" Height="322" Width="184" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="0,0,0,11">
        <Image x:Name="ImgAvatar" Height="150" Margin="10,34,0,0" VerticalAlignment="Top" Source="{Binding User.Image}" HorizontalAlignment="Left" Width="150" Stretch="UniformToFill"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,189,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="TxtName" Text="{Binding User.Name}" HorizontalAlignment="Left" Height="23" Margin="10,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Avatar" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="BtnAddUser" Height="30" Margin="10,241,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30" IsDefault="True" >
            <Image Width="24" Height="24" Source="images/control/Accept24.png" />
        </Button>
        <Button x:Name="BtnCancel" Height="30" Margin="130,241,0,0" IsCancel="True" VerticalAlignment="Top" HorizontalAlignment="Left" Width="30" >
            <Image Width="24" Height="24" Source="images/control/Cancel24.png" />
        </Button>
    </Grid>
</Window>
